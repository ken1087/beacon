<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MenuActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#B70005"
        android:fontFamily="@font/dohyeon"
        android:gravity="center"
        android:text="홈 메뉴"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="465dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <Button
            android:id="@+id/menuInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#99E8DCCC"
            android:fontFamily="@font/dohyeon"
            android:text="내 정보"
            android:textSize="25dp" />

        <Button
            android:id="@+id/menuCheck"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#00F3ECE4"
            android:fontFamily="@font/dohyeon"
            android:text="전자 출결"
            android:textSize="25dp" />

        <Button
            android:id="@+id/menuCheckInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#373334"
            android:fontFamily="@font/dohyeon"
            android:text="출결 조회"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#B70005"
        android:fontFamily="@font/dohyeon"
        android:gravity="center"
        android:text="Smart Attendance System"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>